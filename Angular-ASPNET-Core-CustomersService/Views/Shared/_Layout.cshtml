<!DOCTYPE html>
<html>
<head>
    <base href="/">
    <title>Angular TypeScript App</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Angular 2">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='//fonts.googleapis.com/css?family=Open+Sans:300,400,600' rel='stylesheet' type='text/css' />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="styles/styles.css" rel="stylesheet" />

    <!-- Comment these scripts out if using the webpack option -->
    <!-- Polyfill(s) for older browsers -->
    <script src="lib/shim.min.js"></script>
    <script src="lib/zone.js"></script>
    <script src="lib/system.src.js"></script>
    <script src="systemjs.config.js"></script>
    <script>
        //NOTES: notice the sytemjs.config file above (just go find an eample & put it in your project, reuse the same over & over),
        //this document tells solution what to load when 'app' is imported
        System.import('app').catch(function(err){ console.error(err); }); //app is just an alias in mappings in the systemjs.config file
    </script>

</head>
<body>
    <header class="navbar navbar-inner navbar-fixed-top">
        <nav class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="images/people.png" alt="logo">
                <a href="/customers" class="app-title">Customer Manager</a>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="navbar navbar-fixed-bottom">
            <div class="navbar-inner footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <ul style="list-style-type:none">
                                <li>Created by <a href="https://www.linkedin.com/in/samantha-eltringham-51332227/" target="_blank">@@SamEltringham</a></li>
                                <li>Credit for template <a href="http://github.com/danwahlin" target="_blank">@@DanWahlin</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <form asp-antiforgery="true"></form>


    <!-- 
        If using webpack and AOT comment out system.js 
        scripts in head and add bundle scripts from webpack
        here.        
    -->
    <!-- <script type="text/javascript" src="/dist/polyfills.js"></script>
    <script type="text/javascript" src="/dist/vendor.js"></script>
    <script type="text/javascript" src="/dist/app.js"></script> -->
</body>
</html>
